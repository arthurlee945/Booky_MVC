@model List<Category>

<div class="container ">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new Category <i class="bi bi-bookmark-plus-fill"></i></a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thread>
			<tr>
				<th>Category Name</th>
				<th>Display Order</th>
				<th></th>
			</tr>
		</thread>
		<tbody>
			@foreach (Category c in Model.OrderBy(u => u.DisplayOrder))
			{
				<tr>
					<td>@c.Name</td>
					<td>@c.DisplayOrder</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash3-fill"></i>
								Delete
							</a>
						</div>
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>
