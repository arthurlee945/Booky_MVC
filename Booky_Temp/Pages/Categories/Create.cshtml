@page
@model Booky_Temp.Pages.Categories.CreateModel
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pd-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
		@*<div asp-validation-summary = "ModelOnly"></div>*@
		<div class="mb-3 row p-2">
			<label asp-for="newCat.Name"></label>
			<input asp-for="newCat.Name" type="text" class="form-control" />
			<span asp-validation-for="newCat.Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-2">
			<label asp-for="newCat.DisplayOrder"></label>
			<input asp-for="newCat.DisplayOrder" type="text" class="form-control" />
			<span asp-validation-for="newCat.DisplayOrder" class="text-danger"></span>

		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/categories/index" class="btn btn-outline-secondary form-control">Back To List</a>
			</div>
		</div>
	</div>
</form>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}